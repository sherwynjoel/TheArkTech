---
const { compact = false } = Astro.props;
---
<form method="post" action="/api/quote" class={`grid gap-4 ${compact ? "" : "grid-cols-1"}`}>
  <!-- Honeypot (anti-bot) -->
  <input type="text" name="website" class="hidden" tabindex="-1" autocomplete="off" />

  <div class="grid md:grid-cols-2 gap-4">
    <label class="block">
      <span class="text-sm font-medium">Full name</span>
      <input name="name" required minlength="2" class="mt-1 w-full rounded-md border px-3 py-2" placeholder="Sherwyn Joel" />
    </label>
    <label class="block">
      <span class="text-sm font-medium">Email</span>
      <input name="email" type="email" required class="mt-1 w-full rounded-md border px-3 py-2" placeholder="you@company.com" />
    </label>
  </div>

  <div class="grid md:grid-cols-2 gap-4">
    <label class="block">
      <span class="text-sm font-medium">Phone</span>
      <input name="phone" required class="mt-1 w-full rounded-md border px-3 py-2" placeholder="+91 9XXXXXXXXX" />
    </label>
    <label class="block">
      <span class="text-sm font-medium">Project type</span>
      <select name="projectType" required class="mt-1 w-full rounded-md border px-3 py-2">
        <option value="">Select…</option>
        <option>Website / Landing</option>
        <option>Web App / Dashboard</option>
        <option>Mobile App</option>
        <option>Automation / Integration</option>
        <option>Other</option>
      </select>
    </label>
  </div>

  <label class="block">
    <span class="text-sm font-medium">Estimated budget (optional)</span>
    <select name="budget" class="mt-1 w-full rounded-md border px-3 py-2">
      <option value="">Prefer not to say</option>
      <option>₹50k–₹1L</option>
      <option>₹1L–₹3L</option>
      <option>₹3L–₹10L</option>
      <option>₹10L+</option>
    </select>
  </label>

  <label class="block">
    <span class="text-sm font-medium">Brief</span>
    <textarea name="message" rows="4" class="mt-1 w-full rounded-md border px-3 py-2" placeholder="What are you building? Key features, timeline…"></textarea>
  </label>

  <button class="mt-2 inline-flex justify-center px-6 py-3 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700">
    Submit request
  </button>
  <p class="text-xs text-gray-500">By submitting, you agree to our data handling for contacting you back.</p>
</form>
