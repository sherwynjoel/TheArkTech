---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServiceCard from "../components/ServiceCard.astro";
---
<BaseLayout title="Services — The Ark Tech">
  <section class="mx-auto max-w-7xl px-4 py-16 space-y-10">
    <h1 class="text-3xl font-bold">What we do</h1>
    <div class="grid md:grid-cols-2 gap-6">
      <ServiceCard title="Website Development" desc="Modern, fast, SEO‑friendly websites." items={["Astro, Next.js", "Tailwind CSS", "Forms & CMS"]} />
      <ServiceCard title="Custom Software" desc="From idea to production." items={["Architecture", "APIs", "Databases"]} />
      <ServiceCard title="UI/UX & Prototyping" desc="Design to dev handoff." items={["Wireframes", "Hi‑fi mockups"]} />
      <ServiceCard title="Maintenance" desc="Keep it healthy." items={["Monitoring", "Bug fixes", "Feature iterations"]} />
    </div>
    <a href="/contact" class="inline-block mt-6 px-6 py-3 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700">Request a quote</a>
  </section>
</BaseLayout>
