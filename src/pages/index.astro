    <!-- ‚úÖ GSAP Animations (ESM via CDN to avoid UMD/window conflicts) -->
    <script type="module">
      import gsap from 'https://esm.sh/gsap@3.12.5';
      import { ScrollTrigger } from 'https://esm.sh/gsap@3.12.5/ScrollTrigger';
      import { createAnimatable, utils } from 'https://esm.sh/animejs@4.0.0';

      try {
        gsap.registerPlugin(ScrollTrigger);
        const services = document.querySelectorAll('.service');
        services.forEach((service, i) => {
          gsap.fromTo(
            service,
            { y: 100, opacity: 0 },
            {
              y: 0,
              opacity: 1,
              duration: 0.6,
              delay: i * 0.12,
              scrollTrigger: {
                trigger: service,
                start: 'top 130%',
                toggleActions: 'play none none reverse',
              },
            }
          );
        });

        // Mobile menu toggle
        const toggle = document.getElementById('mobile-menu-toggle');
        const menu = document.getElementById('mobile-menu');
        if (toggle && menu) {
          toggle.addEventListener('click', () => {
            const isHidden = menu.classList.contains('hidden');
            menu.classList.toggle('hidden');
            toggle.setAttribute('aria-expanded', String(isHidden));
          });
        }

        // Anime.js full-page cursor overlay
        const overlay = document.querySelector('.anim-overlay');
        if (overlay) {
          const dot = overlay.querySelector('.anim-dot');
          const anim = createAnimatable(dot, { x: 300, y: 300, ease: 'out(3)' });
          const onMove = (e) => {
            let clientX, clientY;
            if (e.touches && e.touches[0]) {
              clientX = e.touches[0].clientX;
              clientY = e.touches[0].clientY;
            } else {
              clientX = e.clientX;
              clientY = e.clientY;
            }
            const vw = window.innerWidth;
            const vh = window.innerHeight;
            const x = utils.clamp(clientX - vw / 2, -vw / 2, vw / 2);
            const y = utils.clamp(clientY - vh / 2, -vh / 2, vh / 2);
            anim.x(x);
            anim.y(y);
          };
          window.addEventListener('pointermove', onMove, { passive: true });
          window.addEventListener('touchstart', onMove, { passive: true });
          window.addEventListener('touchmove', onMove, { passive: true });
          window.addEventListener('mousemove', onMove, { passive: true });
        }

        // Contact status banner + field highlights
        const statusEl = document.getElementById('contact-status');
        if (statusEl) {
          const params = new URLSearchParams(window.location.search);
          const hasSuccess = params.get('submitted') === '1';
          const error = params.get('error');
          if (hasSuccess) {
            statusEl.innerHTML = `<div class="rounded-lg border border-green-500/30 bg-green-500/10 text-green-300 px-4 py-3 text-sm">Thanks! Your query has been sent. We'll get back to you soon.</div>`;
          } else if (error) {
            const reason = params.get('reason');
            const fields = (params.get('fields') || '').split(',').filter(Boolean);
            let msg = 'There was a problem submitting the form. Please check your details and try again.';
            if (error === 'validation' && fields.length) {
              msg = `Please fix: ${fields.join(', ')}.`;
              // highlight invalid fields
              fields.forEach((name) => {
                const el = document.querySelector(`[name="${name}"]`);
                if (el) {
                  el.classList.add('ring-2', 'ring-red-500');
                }
              });
            } else if (error === 'server') {
              if (reason === 'env') {
                const missing = (params.get('missing') || '').split(',').filter(Boolean);
                msg = missing.length
                  ? `Server email is not configured. Missing: ${missing.join(', ')}`
                  : 'Server email is not configured. Please try again later.';
              } else {
                msg = 'Email sending failed. Please try again later.';
              }
            }
            statusEl.innerHTML = `<div class="rounded-lg border border-red-500/30 bg-red-500/10 text-red-300 px-4 py-3 text-sm">${msg}</div>`;
          }
          // Optional: clean the query string after rendering the message
          if (window.history && (hasSuccess || error)) {
            const url = new URL(window.location.href);
            url.search = '';
            window.history.replaceState({}, '', url.toString());
          }
        }
        // Live clear error ring when field becomes valid
        const requirementEl = document.querySelector('textarea[name="requirement"]');
        if (requirementEl) {
          requirementEl.addEventListener('input', () => {
            const val = requirementEl.value.trim();
            if (val.length >= 5) {
              requirementEl.classList.remove('ring-2', 'ring-red-500');
            }
          });
        }
      } catch (e) {
        console.warn('GSAP init failed:', e);
      }
    </script>

