}

.showreel-track {
  display: inline-flex;
  width: max-content;
  animation: marquee 30s linear infinite;
  will-change: transform;
}

.showreel-track span {
  display: inline-block;
  margin: 0 2rem;
  font-size: 1.25rem;
  font-weight: 600;
  color: #fff;
  text-transform: uppercase;
  transform: skew(-15deg); /* makes text slant */
  transition: color 0.3s;
}

.showreel-track span:hover {
  color: #00bfff; /* highlight color */
}

@keyframes marquee {
  0%   { transform: translateX(0%); }
  100% { transform: translateX(-50%); }
}
</style>
 
